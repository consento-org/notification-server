{
  "name": "@consento/notification-server",
  "version": "0.0.19",
  "description": "A expo based notification implementation for Consento. Both server & client code. ",
  "private": true,
  "main": "./index.js",
  "scripts": {
    "start": "npm run serve",
    "serve": "src/bin/consento-notify",
    "watch-node": "nodemon dist/bin/consento-notify",
    "ci": "npm run lint && npm run test -- --no-watchman",
    "test": "jest",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "pack": "pack-ts && rexreplace '#!/usr/bin/env npx ts-node' '#!/usr/bin/env node' dist/bin/consento-notify.js && chmod +x dist/bin/consento-notify.js",
    "release": "npm run ci && npm run build-ts && npm run pack && cd dist && npm publish --access=public",
    "lint": "eslint --ext .js,.ts ."
  },
  "author": "Martin Heidegger <martin.heidegger@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@consento/api": "^0.1.0",
    "@consento/crypto": "^0.1.0",
    "cross-fetch": "^3.0.4",
    "events": "^3.1.0",
    "expo-server-sdk": "^3.5.0",
    "express": "^4.17.1",
    "flexlock-cb": "^2.1.1",
    "hyperdb": "^3.5.0",
    "hyperswarm": "^2.13.0",
    "level": "^6.0.1",
    "level-ttl": "^3.1.1",
    "rimraf": "^3.0.2",
    "url": "^0.11.0",
    "url-parse": "^1.4.7",
    "ws": "^7.2.5"
  },
  "bin": {
    "consento-notify": "bin/consento-notify.js"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "eslintConfig": {
    "extends": "standard-with-typescript",
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "eslintIgnore": [
    "node_modules/*",
    "dist/*",
    "coverage/*",
    "**/*.d.ts",
    "/src/public/",
    "/src/types/"
  ],
  "devDependencies": {
    "@leichtgewicht/pack-ts": "^1.0.0",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.4",
    "@types/rimraf": "^3.0.0",
    "@types/tape": "^4.13.0",
    "@types/url-parse": "^1.4.3",
    "@types/ws": "^7.2.4",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "babel-preset-expo": "^8.1.0",
    "eslint": "^6.8.0",
    "eslint-config-standard-with-typescript": "^16.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^25.5.4",
    "nodemon": "^2.0.3",
    "rexreplace": "^5.2.1",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/consento-org/notification-server.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/consento-org/notification-server/issues"
  },
  "homepage": "https://github.com/consento-org/notification-server#readme"
}
