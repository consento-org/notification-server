{
  "name": "@consento/notification-server",
  "version": "0.0.2",
  "description": "A expo based notification implementation for Consento. Both server & client code. ",
  "private": true,
  "main": "./index.js",
  "scripts": {
    "start": "npm run serve",
    "serve": "src/bin/consento-notify",
    "watch-node": "nodemon src/bin/consento-notify",
    "ci": "npm run lint && npm run test",
    "test": "jest",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "pack": "pack-ts && rexreplace '#!/usr/bin/env npx ts-node' '#!/usr/bin/env node' dist/bin/consento-notify.js && chmod +x dist/bin/consento-notify.js",
    "release": "npm run ci && npm run pack && cd dist && npm publish --access=public",
    "lint": "eslint --ext .js,.ts ."
  },
  "author": "Martin Heidegger <martin.heidegger@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "expo-server-sdk": "^3.3.0",
    "@consento/api": "0.0.1",
    "@consento/crypto": "0.0.4",
    "cross-fetch": "^3.0.4",
    "events": "^3.0.0",
    "express": "^4.17.1",
    "flexlock-cb": "^2.0.1",
    "hyperdb": "^3.5.0",
    "hyperswarm": "^2.1.0",
    "level": "^5.0.1",
    "level-ttl": "^3.1.1",
    "rimraf": "^3.0.0",
    "sodium-native": "^2.4.6",
    "url": "^0.11.0"
  },
  "bin": {
    "consento-notify": "bin/consento-notify.js"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "eslintConfig": {
    "extends": "standard-with-typescript",
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "eslintIgnore": [
    "node_modules/*",
    "dist/*",
    "coverage/*",
    "**/*.d.ts",
    "/src/public/",
    "/src/types/"
  ],
  "devDependencies": {
    "@leichtgewicht/pack-ts": "^1.0.0",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@types/react": "^16.9.5",
    "@types/rimraf": "^2.0.2",
    "@types/tape": "^4.2.33",
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "babel-preset-expo": "^5.2.0",
    "eslint": "^6.5.1",
    "eslint-config-standard-with-typescript": "^10.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^24.9.0",
    "rexreplace": "^4.1.1",
    "tap": "^14.6.1",
    "tape": "^4.11.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/consento-org/notification-server.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/consento-org/notification-server/issues"
  },
  "homepage": "https://github.com/consento-org/notification-server#readme"
}
