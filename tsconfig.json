{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "types": ["jest"],
    "declaration": true,
    "strict": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  }
}
